@model centuras.org.Models.Game
@{
    ViewData["Title"] = "Create Game";
}
<link href="~/lib/trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<h3>Create a Game</h3>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="editor" asp-for="Content"></textarea>
    </div>
    <div class="form-group">
        <label for="Author">Author</label>
        <input type="text" class="form-control" asp-for="Author" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script>$('#editor').trumbowyg();</script>
}