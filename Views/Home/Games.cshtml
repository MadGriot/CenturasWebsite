@model List<centuras.org.Models.Game>
@{
    ViewData["Title"] = "Games";
}



<div class="container" align="center">
    <h3>Games</h3>
    <br />
    <br />
    @if (Model.Count() == 0)
    {
        <p>No Content</p>
    }
    <div class="row">
        @foreach (Game game in Model.OrderByDescending(x => x.CreatedDate))
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card bg-dark h-100">
                    <div class="card-header" align="center">
                        <h5 class="card-title">@game.Title</h5>
                    </div>
                    <div class="card-body" align="center">
                        <p>@game.Description</p>
                        <p class="card-text">
                            @game.CreatedDate.ToString("MMMM")  @game.CreatedDate.Day, @game.CreatedDate.Year
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Game" asp-controller="Games"
                           asp-route-id="@game.Id" style="text-decoration:none; color:inherit" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>