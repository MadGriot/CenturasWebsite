@model List<centuras.org.Models.Post>
@{
    ViewData["Title"] = "Pathfinder Modules";
}

<div class="container" align="center">
    <h3>@Model.First().Category?.Name</h3>
    <br/>
    <br/>
    <div class="row g-3">
        @foreach (Post post in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <a asp-action="Post" asp-controller="Posts" asp-route-id="@post.Id" style="text-decoration:none; color:inherit">
                    <div class="card bg-dark">
                        <img src="#" alt="One Shot Image" class="card-img-top" />
                        <div class="card-body" align="center">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text">
                                @post.CreatedDate.Year - @post.CreatedDate.Month.ToString() - @post.CreatedDate.Day
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>